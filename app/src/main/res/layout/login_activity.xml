<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A5793"
    tools:context=".LogInActivity">

<TextView
    android:text="facebook"
    android:id = "@+id/faceId"
    android:layout_width = "0dp"
    android:layout_height = "wrap_content"
    android:textColor = "#ffffff"
    android:textAlignment="center"
    android:textSize="50sp"
    android:textStyle="bold"
    android:layout_marginTop="130dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf = "parent"
    app:layout_constraintEnd_toEndOf = "parent"

/>

<EditText
    android:id="@+id/userName"
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:background="@drawable/cornerradius"
    android:textColorHint="#D1D1D1"
    android:hint="@string/UserName"
    android:padding="16dp"
    android:layout_marginTop="70dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/faceId"
/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D1D1D1"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintBottom_toTopOf="@id/password"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/bottomcornerradius"
        android:textColorHint="#D1D1D1"
        android:hint="@string/Password"
        android:padding="16dp"
        android:inputType="numberPassword"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        />

<Button
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/Login"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:textAlignment="center"
    android:padding="10dp"
    android:background="#4D679C"
    android:layout_marginTop="20dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/password"
    />

    <TextView
        android:text="@string/signupforfacebook"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:textColor = "#ffffff"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/helpccenter"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"

        />
    <TextView
        android:text="@string/helpcenter"
        android:id = "@+id/helpccenter"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:textColor = "#ffffff"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"

        />
</androidx.constraintlayout.widget.ConstraintLayout>